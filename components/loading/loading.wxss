.loading-model {
  position: absolute;
  z-index: 2000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.loading-model .lm-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: auto;
  max-width: 300rpx;
  padding: 50rpx 25rpx;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 34%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.loading-model .lm-box .loading {
  width: 80rpx;
  height: 80rpx;
}
.loading-model .lm-box .loading-title {
  font-size: 32rpx;
  margin-top: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
